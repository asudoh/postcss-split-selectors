{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions" : {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "browser": false,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": false
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "max-len": [2, 130, 4],
    "no-param-reassign": ["error", { "props": false }]
  }
}
